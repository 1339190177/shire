<idea-plugin allow-bundled-update="true">
    <resource-bundle>messages.ShireMainBundle</resource-bundle>

    <extensionPoints>
        <extensionPoint qualifiedName="com.phodal.shireLlmProvider"
                        interface="com.phodal.shire.llm.LlmProvider"
                        dynamic="true"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="com.phodal.shire.settings.ShireLlmSettingsConfigurable"
                                 id="shireLlmSettingsConfigurable"
                                 displayName="Shire"/>
    </extensions>

    <extensions defaultExtensionNs="com.phodal">
        <shireLlmProvider implementation="com.phodal.shire.llm.OpenAIProvider"/>
    </extensions>

    <actions>
        <!-- Shire Intentions Action Group -->
        <group id="ShireIntentionsActionGroup" class="com.phodal.shire.action.intention.ShireIntentionsActionGroup"
               icon="com.phodal.shire.ShireIdeaIcons.DEFAULT" searchable="false">

            <add-to-group group-id="ShowIntentionsGroup" relative-to-action="ShowIntentionActions" anchor="after"/>
        </group>
        <!-- Context Action Group -->
        <group id="ShireContextActionGroup"
               popup="true" text="Shire Action" description="Shire action group"
               class="com.phodal.shire.action.context.ShireContextActionGroup"
               icon="com.phodal.shire.ShireIdeaIcons.DEFAULT" searchable="false">

            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>
    </actions>
</idea-plugin>
