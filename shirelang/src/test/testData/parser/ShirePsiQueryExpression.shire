---
variables:
  "allController": {
    from {
        PsiClass clazz
    }
    where {
        clazz.extends("org.springframework.web.bind.annotation.RestController") and clazz.getAnAnnotation() == "org.springframework.web.bind.annotation.RequestMapping"
    }

    select {
        clazz.id, clazz.name, "code"
    }
  }
---

$allController
